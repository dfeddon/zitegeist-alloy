<Alloy>
  <View left="0" right="0" top="15" height="Ti.UI.SIZE" layout="vertical" backgroundColor="transparent">

    <Label class="header" top="0" left="15">QUESTIONS</Label>
    <View id="metricTabs" top="15" left="15" right="15" height="50" layout="horizontal">
      <Button class="questionBtn">1</Button>
      <Button class="questionBtn" enabled="false" color="gray">2</Button>
      <Button class="questionBtn" enabled="false" color="gray">3</Button>
      <Button class="questionBtn" enabled="false" color="gray">4</Button>
      <Button class="questionBtn" enabled="false" color="gray">5</Button>
    </View>

    <View class="viewBacker">
      <View id="question" class="viewUI">
      <!-- <View id="question" top="10" layout="vertical" height="Ti.UI.SIZE"> -->
        <Label class="header">QUESTION</Label>
        <TextArea top="10" right="10" left="10" height="100" backgroundColor="#eef7fa" borderColor="#eef7fa" borderRadius="5"></TextArea>
      </View>
    </View>

    <View class="viewBacker">
      <View id="answers" class="viewUI">
        <Label class="header">ANSWERS</Label>

        <!-- type -->
        <View top="10" layout="horizontal" width="100%" height="Ti.UI.SIZE">
          <Label left="10" width="75">Type</Label>
          <Button id="answerType" class="buttonTap" index="0" left="10" width="Ti.UI.FILL" title="Selection" backgroundColor="#eef7fa" borderColor="#eef7fa" borderRadius="5" onTouchend="changeAnswerTypeHandler"></Button>
        </View>

        <!-- multi select -->
        <View id="multiSelectView" top="10" width="100%" height="Ti.UI.SIZE" layout="horizontal">
          <Label left="10" width="75">Multiples</Label>
          <Switch left="10" value="false"></Switch>
        </View>

      </View>
    </View>

    <View id="itemsView" class="viewBacker">
      <View id="items" class="viewUI">
        <Label class="header">ITEMS</Label>

        <!-- add items -->
        <View id="addItemView" top="10" width="100%" height="Ti.UI.SIZE" layout="horizontal">
          <Button left="10" width="75" onTouchend="addRowHandler">+ Add Item</Button>
        </View>

        <!-- delete / reorder items -->
        <View id="deleteReorderItems" top="10" width="100%" height="Ti.UI.SIZE" layout="horizontal">
          <Label left="15" text="Delete / Reorder Items"/>
          <Switch id="orderSwitch" left="15" value="false" onChange="orderChangeHandler"/>
        </View>

        <!-- items table -->
        <View id="itemsTableView" top="15" width="100%" height="Ti.UI.SIZE" layout="vertical">
          <TableView id="itemsTable" moveable="true" moving="false" editable="true" height="Ti.UI.SIZE" minRowHeight="40" onMove="itemTableChangeHandler" onDelete="itemTableChangeHandler">
          </TableView>
        </View>

      </View>
    </View>

    <!-- Spacer -->
    <View id="spacer" height="50" visible="false"/>

  </View>
</Alloy>
