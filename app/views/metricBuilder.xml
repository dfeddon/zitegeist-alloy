<Alloy>
  <View left="0" right="0" top="15" bottom="0" layout="vertical" backgroundColor="transparent">

    <Label class="header" top="0" left="15">METRICS</Label>
    <View id="metricTabs" top="15" left="15" right="15" height="50" layout="horizontal">
      <Button class="questionBtn">1</Button>
      <Button class="questionBtn" enabled="false" color="gray">2</Button>
      <Button class="questionBtn" enabled="false" color="gray">3</Button>
      <Button class="questionBtn" enabled="false" color="gray">4</Button>
      <Button class="questionBtn" enabled="false" color="gray">5</Button>
    </View>

    <View class="viewBacker">
      <View id="question" class="viewUI">
      <!-- <View id="question" top="10" layout="vertical" height="Ti.UI.SIZE"> -->
        <Label class="header">QUESTION</Label>
        <TextArea top="10" right="10" left="10" height="100" backgroundColor="#eef7fa" borderColor="#eef7fa" borderRadius="5"></TextArea>
      </View>
    </View>

    <View class="viewBacker">

      <View id="answers" class="viewUI">
        <Label class="header">ANSWERS</Label>

        <View top="15" width="100%" layout="horizontal">
          <Label left="10">Multiple Selection</Label>
          <Switch left="10" value="false"></Switch>
        </View>

      </View>

    </View>

  </View>
</Alloy>
