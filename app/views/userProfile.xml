<Alloy>
  <View top="0" id="container" height="Ti.UI.FILL" onPostlayout="postLayoutHandler" bubbleParent="true">

    <View id="mainView" layout="vertical" top="0" bottom="0" width="100%" backgroundColor="white">

      <View id="profile" layout="horizontal" width="100%" top="0" height="Ti.UI.SIZE" backgroundColor="#d7daff">

        <!-- User Pic -->
        <View top="10" left="10" width="Ti.UI.SIZE" height="Ti.UI.SIZE" layout="vertical">
          <ImageView id="image" width="50" height="50" borderRadius="25" image=""></ImageView>
          <!-- Join Button -->
          <Button id="joinButton" top="10" width="50" title="JOIN" backgroundColor="#03710e"></Button>
        </View>

        <!-- Top Bar -->
        <View left="20" top="10" layout="vertical" width="Ti.UI.SIZE" height="Ti.UI.SIZE" >
          <!-- Display Name -->
          <Label id="displayName" width="100%" color="black" ellipsize="true" wordWrap="false"></Label>
          <!-- Username -->
          <Label id="username" top="5" width="100%" color="#777777" wordWrap="false" horizontalWrap="false" lines="1" maxLines="1" ellipsize="true" text="@celehoa"></Label>
          <!-- Location -->
          <Label id="location" top="5" width="100%" color="#777777" wordWrap="false" horizontalWrap="false" lines="1" maxLines="1" ellipsize="true" text="Los Angeles, CA"></Label>
          <!-- Link -->
          <Label id="link" top="5" width="100%" color="blue" wordWrap="false" horizontalWrap="false" lines="1" maxLines="1" ellipsize="true" text="http://www.myhomepage.com"></Label>
          <!-- Spacer -->
          <View id="spacer" height="20"></View>
        </View>

      </View>

      <!-- Button Bar -->
      <View id="buttonBar" layout="horizontal" top="0" width="100%" height="Ti.UI.SIZE" backgroundColor="#2C3E50">
        <Button id="campaigns" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" height="40" color="white" backgroundColor="black" title="Campaigns" width="33%" onTouchend="campaignsClickHandler"></Button>
        <Button id="fame" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" height="40" color="white" title="Fame" width="33%" onTouchend="fameClickHandler"></Button>
        <Button id="ranks" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" height="40" color="white" title="Ranks" width="33%" onTouchend="ranksClickHandler"></Button>
      </View>

      <!-- display -->
      <View id="contentWrapper" top="0" width="100%" backgroundColor="white" height="Ti.UI.SIZE">
      </View>

    </View>

  </View>
</Alloy>
