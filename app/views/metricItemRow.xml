<Alloy>
  <TableViewRow id="rowView" backgroundColor="transparent">
    <View id="container" width="100%" top="0" height="Ti.UI.SIZE" backgroundColor="#fff" borderRadius="0" borderWidth="5" borderColor="#fff" onClick="clickHandler">

      <!-- circle -->
      <View id="circle" left="10" width="40" height="40" borderRadius="20" borderColor="black" backgroundColor="black"></View>
      <!-- index -->
      <Label id="index" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" text="X" left="10" width="40" height="40" color="white"></Label>
      <!-- item label -->
      <Label id="label" left="60" text="..."></Label>
      <!-- padding -->
      <View top="0" left="0" height="65"/>

    </View>
  </TableViewRow>
</Alloy>
