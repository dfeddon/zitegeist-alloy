<Alloy>
  <ScrollView id="scrollView" layout="vertical" left="0" right="0" showVerticalScrollIndicator="true" showHorizontalScrollIndicator="true" top="0" bottom="0" onPostlayout="postLayoutHandler">

  <!-- <View top="10" left="15" right="15" height="Ti.UI.SIZE" backgroundColor="transparent" onPostlayout="postLayoutHandler"> -->

    <!-- Teaser -->
    <View class="viewBacker">
      <View id="teaser" class="viewUI">
        <Label class="header">TEASER</Label>
        <TextArea top="10" left="10" right="10" height="100" color="black" backgroundColor="#eef7fa" borderColor="#eef7fa" borderRadius="5"></TextArea>
      </View>
    </View>

    <!-- Reach -->
    <View class="viewBacker">
      <View id="reach" class="viewUI">
        <Label class="header">REACH</Label>
        <View top="10" left="10" layout="horizontal" width="100%" height="Ti.UI.SIZE">
          <Label left="0">Max Respondents</Label>
          <Label class="creditcosts" left="10">+1 CPR > 250</Label>
        </View>
        <TextField left="10" top="10" height="30" width="100" value="250" backgroundColor="#eef7fa" borderColor="#eef7fa" borderRadius="5" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT"></TextField>
      </View>
    </View>


    <!-- Schedule -->
    <!-- <View id="schedule" isAdvanced="true" top="15" left="15" right="15" layout="vertical" height="Ti.UI.SIZE">
      <Label class="header" top="10" left="0">SCHEDULE</Label>
    </View> -->

    <!-- Audience -->
    <View class="viewBacker">
    <View id="audience" class="viewUI">

      <Label class="header">ENGAGEMENT</Label>

      <View top="10" layout="horizontal" width="100%" height="Ti.UI.SIZE">
        <Label left="10" width="75">Method</Label>
        <Button id="audienceMethod" class="buttonTap" index="0" left="10" width="Ti.UI.FILL" title="Beacons" backgroundColor="#eef7fa" borderColor="#eef7fa" borderRadius="5" onTouchend="changeAudienceHandler"></Button>
      </View>

      <!-- beacons -->
      <View id="methodBeacons" top="10" layout="horizontal" width="100%" height="Ti.UI.SIZE">
        <Label left="10" width="75">Beacons</Label>
        <Button id="tapBeaconsButton" left="10" title="Tap to Edit" class="addBeaconsButton" onTouchend="addBeacons"></Button>
        <View id="beaconTags" top="10" left="10" width="Ti.UI.FILL" layout="horizontal" height="Ti.UI.SIZE" borderRadius="5" backgroundColor="transparent" onTouchend="addBeacons"></View>
      </View>

      <!-- beacons -->
      <View id="methodRanked" top="10" layout="vertical" width="100%" height="Ti.UI.SIZE">
        <!-- <Label left="10">Select Ranks</Label> -->
        <View top="10" layout="horizontal" width="Ti.UI.FILL" height="Ti.UI.SIZE">
          <View backgroundColor="transparent" width="25%" height="Ti.UI.SIZE">
            <Button id="bronzeButton" class="rankedButton" onTouchend="rankedChangeHandler">B</Button>
          </View>
          <View backgroundColor="transparent" width="25%" height="Ti.UI.SIZE">
            <Button id="silverButton" class="rankedButton" onTouchend="rankedChangeHandler">S</Button>
          </View>
          <View backgroundColor="transparent" width="25%" height="Ti.UI.SIZE">
            <Button id="goldButton" class="rankedButton" onTouchend="rankedChangeHandler">G</Button>
          </View>
          <View backgroundColor="transparent" width="25%" height="Ti.UI.SIZE">
            <Button id="obsidianButton" class="rankedButton" onTouchend="rankedChangeHandler">O</Button>
          </View>
        </View>
        <!-- <Button left="10" title="Tap to add..." class="addBeaconsButton"></Button>
        <View id="beaconTags" left="10" width="Ti.UI.FILL" layout="horizontal" height="Ti.UI.SIZE" borderRadius="5" backgroundColor="#eef7fa" borderColor="#eef7fa"></View> -->
      </View>

    </View> <!-- end audience -->
  </View>

  <!-- Options -->
  <View class="viewBacker">
    <View id="options" class="viewUI">
      <Label class="header">OPTIONS</Label>

      <View top="10" layout="horizontal" width="100%" height="Ti.UI.SIZE">
        <Switch left="10" value="false"></Switch>
        <Label left="10">Include Media</Label>
        <!-- <ImageView left="50" width="50" height="50"></ImageView> -->
      </View>

      <View top="10" layout="horizontal" width="100%" height="Ti.UI.SIZE">
        <Switch left="10" value="false"></Switch>
        <Label left="10">Featured Campaign</Label>
        <Label class="creditcosts" left="10">+5000 credits</Label>
      </View>

      <View id="privatize" top="10" left="10" right="15" layout="horizontal" height="Ti.UI.SIZE" isAdvanced="true">
        <Switch left="0" value="false"></Switch>
        <Label left="10">Privatize Results</Label>
        <Label class="creditcosts" left="10">+1000 credits</Label>
      </View>
    </View>
  </View>


    <!-- Featured -->
    <!-- <View class="viewBacker">
      <View id="featured" class="viewUI">
        <Label class="header">FEATURED</Label>
      </View>
    </View> -->

    <!-- Demographics -->
    <View class="viewBacker">
      <View id="demographics" class="viewUI">
        <Label class="header">DEMOGRAPHICS</Label>

        <View top="10" layout="horizontal" width="100%" height="Ti.UI.SIZE">
          <Label left="10" width="75">Gender</Label>
          <Button id="demoGender" class="buttonTap" index="0" left="10" width="Ti.UI.FILL" title="Any" backgroundColor="#eef7fa" borderColor="#eef7fa" borderRadius="5" onTouchend="changeDemoGenderHandler"></Button>
        </View>
        <View top="10" layout="horizontal" width="100%" height="Ti.UI.SIZE">
          <Label left="10" width="75">Age</Label>
          <Button id="demoAge" class="buttonTap" index="0" left="10" width="Ti.UI.FILL" title="Any" backgroundColor="#eef7fa" borderColor="#eef7fa" borderRadius="5" onTouchend="changeDemoAgeHandler"></Button>
        </View>
        <!-- <View top="10" layout="horizontal" width="100%" height="Ti.UI.SIZE">
          <Label left="10" width="75">Locale</Label>
          <Button id="demoLocale" class="buttonTap" index="0" left="10" width="Ti.UI.FILL" title="Any" backgroundColor="#eef7fa" borderColor="#eef7fa" borderRadius="5" onTouchend="changeDemoLocaleHandler"></Button>
        </View> -->
        <View id="demoLocality" top="10" layout="horizontal" height="Ti.UI.SIZE" isAdvanced="true">
          <Label left="10" width="75">My Locality</Label>
          <Switch left="10" value="false"></Switch>
          <!-- <Label class="creditcosts" left="10">+1000 credits</Label> -->
        </View>

      </View>
    </View>

    <!-- Rewards -->
    <View class="viewBacker">
      <View id="rewards" class="viewUI">
        <Label class="header">REWARDS</Label>

        <View top="10" layout="horizontal" width="100%" height="Ti.UI.SIZE">
          <Label left="10" width="75">Type</Label>
          <Button id="rewardsType" class="buttonTap" index="0" left="10" width="Ti.UI.FILL" title="None" backgroundColor="#eef7fa" borderColor="#eef7fa" borderRadius="5" onTouchend="changeRewardsTypeHandler"></Button>
        </View>

        <View id="rewardsCreditsView" top="10" layout="horizontal" width="100%" height="Ti.UI.SIZE">
          <Label left="10" width="75">CPR</Label>
          <TextField id="rewardsCPR" left="10" width="50" height="30" value="0" backgroundColor="#eef7fa" borderColor="#eef7fa" borderRadius="5"></TextField>
        </View>

        <View id="rewardsCouponView" top="10" layout="horizontal" width="100%" height="Ti.UI.SIZE">
          <Label left="10" width="75">Display Text</Label>
          <TextField id="rewardsDisplayText" left="10" width="Ti.UI.FILL" height="30" hintText="e.g. 30% off next purchase" backgroundColor="#eef7fa" borderColor="#eef7fa" borderRadius="5"></TextField>
        </View>

      </View>
    </View>

    <!-- Metrics -->
    <View id="metrics" top="15" left="15" right="15" layout="vertical" height="Ti.UI.SIZE">
      <Label class="header" top="10" left="0">METRICS</Label>
      <View id="metricTabs" top="15" height="50" width="100%" layout="horizontal">
        <Button id="questionBtn">1</Button>
        <Button id="questionBtn" enabled="false" color="gray">2</Button>
        <Button id="questionBtn" enabled="false" color="gray">3</Button>
        <Button id="questionBtn" enabled="false" color="gray">4</Button>
        <Button id="questionBtn" enabled="false" color="gray">5</Button>
      </View>
      <View id="questionView" width="100%" height="Ti.UI.SIZE">
        <Require type="view" src="metricBuilder" id="metricBuilderView"/>
      </View>
    </View>

  <!-- </View> -->

</ScrollView>
</Alloy>
