<Alloy>
  <View top="0" id="container" height="Ti.UI.FILL" onPostlayout="postLayoutHandler" bubbleParent="true" backgroundColor="transparent">

    <View id="mainView" layout="vertical" top="0" bottom="0" width="100%" backgroundColor="transparent">

      <View id="profile" layout="horizontal" width="100%" top="0" height="Ti.UI.SIZE" backgroundColor="transparent" backgroundImage="/images/bgDefault.jpg">

        <!-- User Pic -->
        <View top="10" left="10" width="Ti.UI.SIZE" height="Ti.UI.SIZE" layout="vertical">
          <ImageView id="image" width="50" height="50" borderRadius="25"></ImageView>
          <!-- Join Button -->
          <Button id="editProfileButton" top="10" width="50" title="Edit" backgroundColor="#03710e"></Button>
        </View>

        <!-- Top Bar -->
        <View left="20" top="10" layout="vertical" width="Ti.UI.SIZE" height="Ti.UI.SIZE" >
          <!-- Display Name -->
          <Label id="displayName" width="100%" color="white" ellipsize="true" wordWrap="false" text="Celebration HOA"></Label>
          <!-- Username -->
          <Label id="username" top="5" width="100%" color="white" wordWrap="false" horizontalWrap="false" lines="1" maxLines="1" ellipsize="true" text="@celehoa"></Label>
          <!-- Location -->
          <Label id="location" top="5" width="100%" color="white" wordWrap="false" horizontalWrap="false" lines="1" maxLines="1" ellipsize="true" text="Los Angeles, CA"></Label>
          <!-- Link -->
          <Label id="link" top="5" width="100%" color="#7cb2f2" wordWrap="false" horizontalWrap="false" lines="1" maxLines="1" ellipsize="true" text="http://www.myhomepage.com"></Label>
          <!-- Spacer -->
          <View id="spacer" height="20"></View>
        </View>

      </View>

      <!-- Button Bar -->
      <View id="buttonBar" layout="horizontal" top="0" width="100%" height="Ti.UI.SIZE">
        <Button id="campaigns" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" height="40" color="white" backgroundColor="black" title="CAMPAIGNS" width="25%" onTouchend="campaignsClickHandler"></Button>
        <Button id="ranks" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" height="40" color="white" title="RANKS" width="25%" onTouchend="ranksClickHandler"></Button>
        <Button id="zeitgeist" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" height="40" color="white" title="FAME" width="25%" onTouchend="zeitgeistClickHandler"></Button>
        <Button id="beacons" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" height="40" color="white" title="BEACONS" width="25%" onTouchend="beaconsClickHandler"></Button>
      </View>

      <!-- display -->
      <View id="contentWrapper" top="0" width="100%" backgroundColor="transparent" height="Ti.UI.SIZE">
      </View>

    </View>

  </View>
</Alloy>
