<Alloy>
  <TableViewRow id="rowView" backgroundColor="transparent">
    <View width="100%" top="10" bottom="10" height="Ti.UI.SIZE" backgroundColor="#fff" borderRadius="15" borderWidth="5" borderColor="#fff">
      <!-- User Pic -->
      <ImageView top="10" left="10" width="50" height="50" image="/images/matt-bloom-circle.png"></ImageView>
      <!-- Top Bar -->
      <View top="10" layout="horizontal" height="Ti.UI.SIZE">
        <!-- Display Name -->
        <Label id="displayName" left="75" color="black" wordWrap="false">Celebration HOA</Label>
        <!-- Username -->
        <Label id="username" left="5" wordWrap="false">@celehoa</Label>
        <!-- Indicators -->
        <View left="5" height="Ti.UI.SIZE">
          <!-- Rewards -->
          <ImageView right="15" width="30" top="0" height="35" image="/images/reward-creds.png"></ImageView>
          <Label id="rewardcredits" right="5" width="30" top="5">25</Label>
        </View>
      </View>
      <!-- Teaser -->
      <View left="75" top="40" height="Ti.UI.SIZE">
        <Label id="teaser" left="0" right="15" top="0">Are you planning to vote in next month's CROA election? Let us know which candidate has your vote!</Label>
      </View>
      <!-- Tally -->
      <View left="0" top="80" height="Ti.UI.SIZE" width="Ti.UI.SIZE">
        <View left="30" height="Ti.UI.SIZE" width="Ti.UI.SIZE">
        <!-- vertical bar -->
        <ImageView top="0" width="8" height="40" borderRadius="5" backgroundColor="#a5aaa7" borderColor="#a5aaa7"/>
        <!-- circle -->
        <ImageView bottom="0" width="16" height="16" borderRadius="9" backgroundColor="#a5aaa7" borderColor="#a5aaa7"/>
        <!-- inner circle -->
        <ImageView bottom="4" width="8" height="8" borderRadius="5" backgroundColor="#050505" borderColor="#050505"/>
        <!-- progress -->
        <ImageView bottom="8" height="20" width="4" borderRadius="4" backgroundColor="#050505" borderColor="#050505"/>
      </View>
        <!-- percent text -->
        <View left="10" bottom="20" height="Ti.UI.SIZE" layout="horizontal">
          <Label id="percent" left="0">55</Label>
          <Label id="percentSymbol" left="0">%</Label>
        </View>
      </View>
      <!-- Temp Spacer -->
      <View width="1" height="10" left="0" top="135"></View>
    </View>
  </TableViewRow>
</Alloy>
