<Alloy>
  <View>
    <View id="container" top="0" width="100%" height="100%" backgroundColor="gray">

      <View layout="vertical" width="100%" top="0" height="100%" backgroundColor="#03a9f4">

        <!-- top bar -->
        <View top="20" height="Ti.UI.SIZE" width="100%">
          <!-- <ImageView id="logo" width="250" height="250" image="/images/zitegeist-logo-vert.png"></ImageView> -->
          <Button id="registration" right="15" color="white" width="100" onClick="register">REGISTER</Button>
        </View>

        <!-- logo -->
        <View top="30" height="Ti.UI.SIZE" width="100%">
          <ImageView id="logo" width="150" height="150" image="/images/zitegeist-logo-vert.png"></ImageView>
          <!-- <Label id="signinLbl" color="white">SIGN IN</Label> -->
        </View>

        <!-- input fields -->
        <View top="20" left="15" right="15" height="Ti.UI.SIZE" layout="vertical">
          <TextField id="email" top="20" width="90%" color="#000" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" hintText="EMAIL" borderRadius="20" value="john1@doe.com"></TextField>
          <TextField id="password" top="20" width="90%" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" hintText="PASSWORD" borderRadius="20" passwordMask="true" color="#000" value="password1"></TextField>
          <Button id="signinBtn" height="40" top="20" width="90%" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" borderRadius="20" onClick="doSignin">SIGN IN</Button>
          <Label top="20" width="90%" color="#222" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER">Forgot your password?</Label>
        </View>

      </View>
    </View>
  </View>
</Alloy>
